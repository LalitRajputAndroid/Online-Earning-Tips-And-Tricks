<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:background="@color/black"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="2dp"
        >

        <ImageView
            android:id="@+id/product_Imgid"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            android:src="@drawable/productimg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t1_id"
            android:text="Blog Titale"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            />

        <LinearLayout
            android:id="@+id/linerid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1_id"
            android:layout_toRightOf="@+id/product_Imgid"
            android:layout_marginLeft="25dp"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Button 1"
                android:textStyle="bold"
                android:backgroundTint="@color/white"
                android:layout_marginRight="15dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Button 2"
                android:textStyle="bold"
                android:backgroundTint="@color/white"
                />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>